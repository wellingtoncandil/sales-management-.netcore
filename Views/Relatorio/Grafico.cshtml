<h2> Gráfico de Vendas por Produto</h2>
<head>
    <title>Pie Chart</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
</head>

<div id="canvas-holder" style="width:40%">
    <canvas id="chart-area"></canvas>
</div>

<iframe width="1024" height="804" src="https://app.powerbi.com/view?r=eyJrIjoiMTVlNGM4MzEtODk4OC00YjE4LWI5YzQtZDg3MjViMDdmZTVmIiwidCI6ImFlMTMzMjQ4LTViZjgtNDYyMy1hODM5LTkxYjQ5ZDUzMjQ1OSJ9&pageName=ReportSection" frameborder="0" allowFullScreen="true"></iframe>

<script>
    var randomScalingFactor = function () {
        return Math.round(Math.random() * 100);
    };

    var config = {
        type: 'pie',
        data: {
            datasets: [{
                data: [@Html.Raw(ViewBag.Valores)],
                backgroundColor: [@Html.Raw(ViewBag.Cores)],
                label: 'Dataset 1'
            }],
            labels: [@Html.Raw(ViewBag.Labels)],
        },
        options: {
            responsive: true
        }
    };

    window.onload = function () {
        var ctx = document.getElementById('chart-area').getContext('2d');
        window.myPie = new Chart(ctx, config);
    };
</script>



